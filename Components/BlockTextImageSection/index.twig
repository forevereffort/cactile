<section {% if section_id %} id="{{ section_id }}" {% endif %} class="block-text-image-section">
    <div class="container">
        <div class="block-text-image-row">
            <div class="content-col">
                <div class="content-col-inner">
                    {{ content|e('wp_kses_post') }}
                    <div class="link-row">
                        <a class="btn btn-default" href="{{ link_url }}">{{ link_title }}</a>
                    </div>
                </div>
            </div>
            <div class="image-col">
                <div class="image-col-inner" style="background-image: url('{{ image.src|resizeDynamic(1000) }}')">
                    {% if retina_image %}
                        <img
                            class="lazyload"
                            src="{{ placeholderImage(image.width, image.height) }}"
                            data-src="{{ image.src|resizeDynamic(image.width) }}"
                            data-srcset="{{ image.src|resizeDynamic(image.width) }} 1x, {{ retina_image.src|resizeDynamic(retina_image.width) }} 2x"
                            data-sizes="auto"
                            alt="{{ image.alt|e }}"
                        >
                    {% else %}
                        <img
                            class="lazyload"
                            src="{{ placeholderImage(image.width, image.height) }}"
                            data-src="{{ image.src|resizeDynamic(image.width) }}"
                            alt="{{ image.alt|e }}"
                        >
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>